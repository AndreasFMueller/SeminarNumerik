lodd(xi,x,n) := product( (xi - (x - i*h)), i, -n, n);
expand(lodd(xi,x,1));

ljodd(xi,x,n,j) :=
	product( (xi - (x-i*h)), i, -n, j-1) *
	product( (xi - (x-i*h)), i, j+1, n);
ljodd(xi,x,2,1);

ljoddn(xi,x,n,j) := ljodd(xi,x,n,j) / ljodd(x - j*h,x,n,j);
ljoddn(xi,x,2,1);

